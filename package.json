{
  "name": "website",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf public && rm -rf .no-directory && mkdir public && mkdir .no-directory && cp -a src/compiled/. public/",
    "css:lint": "stylelint src/scss/*.scss",
    "css:compile": "node-sass --output-style compressed -o public src/scss",
    "css:prefix": "postcss -u autoprefixer -r public/*.css",
    "build:css": "run-s css:lint css:compile css:prefix",
    "build:js": "webpack --mode=production",
    "build:html": "posthtml -c .posthtmlrc.json",
    "build-all": "run-p build:*",
    "build": "run-s clean build-all",
    "deploy": "firebase deploy --only hosting --non-interactive",
    "publish": "run-s build deploy",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "serve": "firebase serve --only hosting",
    "serve-and-watch": "run-p serve watch:*",
    "watch": "run-s build serve-and-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valueourminds/website.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valueourminds/website/issues"
  },
  "homepage": "https://github.com/valueourminds/website#readme",
  "dependencies": {
    "bootstrap": "^4.5.2",
    "jquery": "^3.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "eslint": "^7.7.0",
    "eslint-loader": "^4.0.2",
    "firebase-tools": "^8.7.0",
    "htmlnano": "^0.2.6",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "posthtml": "^0.13.2",
    "posthtml-cli": "^0.7.3",
    "posthtml-modules": "^0.6.2",
    "stylelint": "^13.6.1",
    "stylelint-config-twbs-bootstrap": "^2.0.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
